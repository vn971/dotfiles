#!/bin/bash -eu

# launches a command inside firejail with a profile named "panic"
# Example usage:
#   fj --whitelist="`pwd`" ps aux

{ # read the whole file before executing it
set -o pipefail

firejail --profile=~/.config/firejail/panic "$@"

};[ x"${BASH_SOURCE[0]}" != x"$0" ] && return || exit 0